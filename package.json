{
  "name": "servie-errorhandler",
  "version": "0.1.2",
  "description": "Map errors to a Servie response",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "lint": "tslint \"src/**/*.ts\" --project tsconfig.json",
    "build": "rimraf dist && tsc",
    "specs": "jest --coverage",
    "test": "npm run -s lint && npm run -s build && npm run -s specs",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/serviejs/servie-errorhandler.git"
  },
  "keywords": [
    "servie",
    "error",
    "handler",
    "http",
    "debug"
  ],
  "author": {
    "name": "Blake Embrey",
    "email": "hello@blakeembrey.com",
    "url": "http://blakeembrey.me"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/serviejs/servie-errorhandler/issues"
  },
  "homepage": "https://github.com/serviejs/servie-errorhandler",
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "src/.*\\.(?:test|spec)\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "devDependencies": {
    "@types/boom": "^7.2.0",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^22.2.2",
    "@types/node": "^7.0.60",
    "boom": "^7.2.0",
    "http-errors": "^1.6.3",
    "jest": "^22.4.3",
    "rimraf": "^2.5.4",
    "servie": "^2.1.3",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.2.1"
  },
  "peerDependencies": {
    "servie": "^2.1.0"
  },
  "dependencies": {
    "@types/escape-html": "0.0.20",
    "escape-html": "^1.0.3",
    "servie-send": "^1.0.0"
  }
}
