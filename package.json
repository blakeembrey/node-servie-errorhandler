{
  "name": "servie-errorhandler",
  "version": "0.1.0",
  "description": "Map errors to a Servie response",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "lint": "tslint \"src/**/*.ts\"",
    "build": "rimraf dist && tsc",
    "specs": "jest --coverage",
    "test": "npm run -s lint && npm run -s build && npm run -s specs",
    "prepublish": "typings install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/blakeembrey/node-servie-errorhandler.git"
  },
  "keywords": [
    "servie",
    "error",
    "handler",
    "http",
    "debug"
  ],
  "author": {
    "name": "Blake Embrey",
    "email": "hello@blakeembrey.com",
    "url": "http://blakeembrey.me"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/blakeembrey/node-servie-errorhandler/issues"
  },
  "homepage": "https://github.com/blakeembrey/node-servie-errorhandler",
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "ts-jest/preprocessor.js"
    },
    "testRegex": "src/.*\\.(?:test|spec)\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "devDependencies": {
    "jest": "^19.0.0",
    "rimraf": "^2.5.4",
    "servie": "^0.2.0",
    "ts-jest": "^19.0.0",
    "tslint": "^4.3.1",
    "tslint-config-standard": "^4.0.0",
    "typescript": "^2.2.1",
    "typings": "^2.1.0"
  },
  "peerDependencies": {
    "servie": "^0.2.0"
  },
  "dependencies": {
    "@types/accepts": "^1.3.1",
    "@types/escape-html": "0.0.19",
    "accepts": "^1.3.3",
    "escape-html": "^1.0.3"
  }
}
