{
  "name": "servie-errorhandler",
  "version": "1.3.0",
  "description": "Map errors to a Servie response",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "lint": "tslint \"src/**/*.ts\" --project tsconfig.json",
    "build": "rimraf dist && tsc",
    "specs": "jest --coverage",
    "test": "npm run -s lint && npm run -s build && npm run -s specs",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/serviejs/servie-errorhandler.git"
  },
  "keywords": [
    "servie",
    "error",
    "handler",
    "http",
    "debug"
  ],
  "author": {
    "name": "Blake Embrey",
    "email": "hello@blakeembrey.com",
    "url": "http://blakeembrey.me"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/serviejs/servie-errorhandler/issues"
  },
  "homepage": "https://github.com/serviejs/servie-errorhandler",
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "src/.*\\.(?:test|spec)\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "devDependencies": {
    "@types/boom": "^7.2.0",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.9",
    "boom": "^7.2.0",
    "http-errors": "^1.6.3",
    "jest": "^23.6.0",
    "rimraf": "^2.5.4",
    "servie": "^3.0.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.1.6"
  },
  "peerDependencies": {
    "servie": ">=2.1 <4"
  },
  "dependencies": {
    "@types/escape-html": "0.0.20",
    "@types/negotiator": "^0.6.1",
    "escape-html": "^1.0.3",
    "negotiator": "^0.6.1",
    "servie-send": "^1.1.1"
  }
}
